// -*- mode: jsonc -*-
{
	"output": "DP-1",
	"layer": "top",
	"position": "top",

	"height": 50,
    "margin": "10 15 0 15",
	"spacing": 4,

	"modules-left": [
        "custom/ncspot-song",
        "custom/ncspot-previous",
        "custom/ncspot-playpause",
        "custom/ncspot-next",
	],

	"modules-center": [
		"hyprland/workspaces"
	],

	"modules-right": [
		"clock",
		"cpu",
		"memory",
		"pulseaudio"
	],

	"hyprland/workspaces": {
		"format": "{icon}",
		"format-icons": {
            "1": "",
            "2": "",
            "3": "",
			"default": "",
		},

		"persistent-workspaces": {
			"*": 3
		}
	},

	"cpu": {
		"interval": 10,
		"format": "{usage}%",
		"max-length": 10 
	},

	"memory": {
		"interval": 10,
		"format": "{percentage}%",
		"max-length": 10 
	},

	"clock": {
		"interval": 30,
		"timezone": "Europe/Madrid",
		"format": "{:%H:%M}"
	},
	
	"pulseaudio": {
		"scroll-step": 1,

		"format": "{volume}% {icon} {format_source}",
		"format-muted": "{volume}% {icon} {format_source}",

		"format-bluetooth": "{volume} {icon}󰂯 {format_source}",
		"format-bluetooth-muted": "{volume} {icon}󰂯 {format_source}",

		"format-source": "{volume}% 󰍬",
		"format-source-muted": "{volume}% 󰍬",

		"format-icons": {
			"headphone": "󰋋",
			"headset": "󰋋",
			"default": "󰋋"
		},

		"on-click": "pavucontrol"
    },

    "custom/ncspot-previous": {
        "format": "",
        "on-click": "playerctl --player=ncspot previous && pkill -RTMIN+1 waybar"
    },

    "custom/ncspot-next": {
        "format": "",
        "on-click": "playerctl --player=ncspot next && pkill -RTMIN+1 waybar"
    },

    "custom/ncspot-song": {
        "exec": "~/.config/waybar/scripts/ncspot_song.sh",
        "return-type": "json",
        "interval": 2,
        "signal": 1
    },

    "custom/ncspot-playpause": {
        "exec": "~/.config/waybar/scripts/ncspot_playpause.sh",
        "return-type": "json",
        "interval": 2,
        "on-click": "playerctl --player=ncspot play-pause && pkill -RTMIN+1 waybar",
        "signal": 1
    }

}
	


